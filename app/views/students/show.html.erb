<h1 class="text-center m-4 h1">Students</h1>
<table class="table w-50 table-bordered table-striped table-hover m-auto text-center">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Date Of Birth</th>
    <th>Department</th>
  </tr>
  <tr>
    <td><%= @student.id %></td>
    <td><%= "#{@student.first_name} #{@student.last_name}" %></td>
    <td><%= @student.email %></td>
    <td><%= @student.birthdate %></td>
    <td><%= @student.department %></td>
  </tr>
</table>

<div class="text-center p-2">
  <%= link_to 'Home', students_path, class: "text-decoration-none text-dark btn btn-info" %>
  <%= link_to 'Edit', edit_student_path(@student), class: "text-decoration-none text-dark btn btn-warning" %>
  <%= link_to "Destroy", student_path(@student), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-decoration-none text-light btn btn-danger" %>
</div>
