<div class="container w-50">
<%= form_with model: book do |form| %>
  <div class="row py-3">
    <div class="col-6 col-sm-3">
      <%= form.label :name %>
    </div>
    <div class="col-6 col-sm-3">
      <%= form.text_field :name %>
    </div>
    <% @book.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="row pb-3">
    <div class="col-6 col-sm-3">
      <%= form.label :price %>
    </div>
    <div class="col-6 col-sm-3">
      <%= form.text_field :price %><br>
    </div>
    <% @book.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="row pb-3">
    <div class="col-6 col-sm-3">
      <%= form.label :author_id %>
    </div>
    <div class="col-6 col-sm-3">
      <%= form.text_field :author_id %><br>
    </div>
    <% @book.errors.full_messages_for(:author_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="w-25 m-auto">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
</div>
