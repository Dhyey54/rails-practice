<h1 class="text-center m-4 h1">Employees</h1>
<table class="table w-50 table-bordered table-striped table-hover m-auto text-center">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Age</th>
    <th>No of Order</th>
    <th>Full Time Availablity</th>
    <th>Salary</th>
  </tr>
  <tr>
    <td><%= "#{@employee.first_name} #{@employee.last_name}" %></td>
    <td><%= @employee.email %></td>
    <td><%= @employee.age %></td>
    <td><%= @employee.no_of_order %></td>
    <td><%= @employee.full_time_available %></td>
    <td><%= @employee.salary %></td>
  </tr>
</table>
