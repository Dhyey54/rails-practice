<h1 class="text-center m-4 h1">Employees</h1>
<table class="table w-75 table-bordered table-striped table-hover m-auto text-center">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Age</th>
    <th>No of Order</th>
    <th>Full Time Availablity</th>
    <th>Salary</th>
    <th>Action</th>
    <th>Order Action</th>
  </tr>
  <% @employees.each_with_index do |employee, inx| %>
    <tr>
      <td><%= link_to inx+1, employee %></td>
      <td><%= "#{employee.first_name} #{employee.last_name}" %></td>
      <td><%= employee.email %></td>
      <td><%= employee.age %></td>
      <td><%= employee.no_of_order %></td>
      <td><%= employee.full_time_available %></td>
      <td><%= employee.salary %></td>
      <td><%= link_to 'Edit', edit_employee_path(employee), class: "text-decoration-none text-dark btn btn-warning me-2" %>
      <%= link_to "Destroy", employee_path(employee), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-decoration-none text-light btn btn-danger" %></td>
      <td><%= link_to 'Increment', order_increment_path(employee), class: "text-decoration-none text-light btn btn-info me-2" %>
      <%= link_to "Decrement", order_decrement_path(employee), class: "text-decoration-none text-light btn btn-info" %></td>
    </tr>
  <% end %>
</table>

<div class="text-center p-2">
  <%= link_to "All Employees", all_employees_path, class: "text-decoration-none text-light btn btn-info" %>
</div>
