<h1 class="text-center my-4">Cars</h1>
<%= render "search" %>
<%= render "shared/logout" %>
<table class="table w-50 table-bordered table-striped table-hover m-auto text-center">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Constructor</th>
    <th>Price</th>
  </tr>
  <% @cars.each do |car| %>
    <tr>
      <td><%= link_to car.id, car %></td>
      <td><%= car.name %></td>
      <td><%= car.constructor %></td>
      <td><%= car.price %></td>
    </tr>
  <% end %>
</table>

<div class="text-center p-2">
  <%= link_to "New Car", new_car_path, class: "text-decoration-none text-dark btn btn-info" %>
  <%= link_to 'Download PDF', "download_pdf" , class: "text-decoration-none text-dark btn btn-info" %>
</div>
