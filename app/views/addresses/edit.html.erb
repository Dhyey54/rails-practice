<h1 class="text-center m-4 h1">Edit Address Details</h1>

<div class="container w-50">
  <%= form_with model: @address do |form| %>
    <div class="row py-3">
      <div class="col-6 col-sm-3">
        <%= form.label :address %>
      </div>
      <div class="col-6 col-sm-3">
        <%= form.text_field :address %>
      </div>
    </div>

    <div class="row pb-3">
      <div class="col-6 col-sm-3">
        <%= form.label :pincode %>
      </div>
      <div class="col-6 col-sm-3">
        <%= form.text_field :pincode %><br>
      </div>
    </div>

    <div class="row pb-3">
      <div class="col-6 col-sm-3">
        <%= form.label :city %>
      </div>
      <div class="col-6 col-sm-3">
        <%= form.text_field :city %><br>
      </div>
    </div>

    <div class="row pb-3">
      <div class="col-6 col-sm-3">
        <%= form.label :state %>
      </div>
      <div class="col-6 col-sm-3">
        <%= form.text_field :state %><br>
      </div>
    </div>

    <div class="w-25 m-auto">
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>
